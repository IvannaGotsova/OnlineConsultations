@model EditQuestionModelView 

@{
    ViewBag.Title = "Edit Question";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.QuestionId" />
            <div class="mb-3">
                <div class="form-group">
                    <label asp-for="@Model.QuestionTitle" class="form-label">Question Title</label>
                    <input asp-for="@Model.QuestionTitle" class="form-control" aria-required="true" />
                    <span asp-validation-for="QuestionTitle" class="text-danger"></span>
                    <label asp-for="@Model.QuestionDescription" class="form-label">Question Description</label>
                    <input asp-for="@Model.QuestionDescription" class="form-control" aria-required="true" />
                    <span asp-validation-for="QuestionDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.QuestionDate" class="form-label">Question Date</label>
                    <input asp-for="@Model.QuestionDate" class="form-control" aria-required="true" />
                    <span asp-validation-for="QuestionDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-group">
                    <label asp-for="@Model.SearchUserId" class="form-label">Search User Id </label>
                    <input asp-for="@Model.SearchUserId" class="form-control" aria-required="true" />
                    <span asp-validation-for="SearchUserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.GuestUserId" class="form-label">Guest User Id </label>
                    <input asp-for="@Model.GuestUserId" class="form-control" aria-required="true" />
                    <span asp-validation-for="GuestUserId" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}