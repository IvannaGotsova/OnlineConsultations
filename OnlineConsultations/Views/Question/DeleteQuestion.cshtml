@model DeleteQuestionModelView 

@{
    ViewBag.Title = "Delete Question";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" asp-for="@Model.QuestionId" />
            <div class="form-group">
                <label asp-for="QuestionTitle" class="control-label">Question Title</label>
                <input asp-for="QuestionTitle" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="QuestionDescription" class="control-label">Question Description</label>
                <input asp-for="QuestionDescription" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="QuestionDate" class="control-label">Question Date</label>
                <input asp-for="QuestionDate" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="GuestUserId" class="control-label">Guest User Id</label>
                <input asp-for="GuestUserId" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="SearchUserId" class="control-label">Search User Id</label>
                <input asp-for="SearchUserId" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>