@model DeletePostModelView 

@{
    ViewBag.Title = "Delete Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" asp-for="@Model.PostId" />
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label">Post Title</label>
                <input asp-for="PostTitle" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="PostDescription" class="control-label">Post Description</label>
                <input asp-for="PostDescription" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="PostDate" class="control-label">Post Date</label>
                <input asp-for="PostDate" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ProvideUserId" class="control-label">Provide User Id</label>
                <input asp-for="ProvideUserId" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>