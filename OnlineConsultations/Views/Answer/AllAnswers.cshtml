@model IEnumerable<AllAnswersModelView> 


@{
    ViewBag.Title = "All Answers";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Answer" asp-action="AllAnswers"
   sp-route-information="" class="btn btn-success">All Answers</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var answer in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">Answer ID: @answer.AnswerId</h5>
                    <h5 class="card-title mt-1">Answer Description: @answer.AnswerDescription</h5>
                    <h5 class="mb-0">Answer Date: @answer.AnswerDate</h5>
                    <h5 class="mb-0">Question ID: @answer.QuestionId</h5>
                    <h5 class="mb-0">Provide User ID: @answer.ProvideUserId</h5>
                </div>               
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no customers yet!</p>
    }
 
</div>