@model IEnumerable<AllRatingsModelView> 


@{
    ViewBag.Title = "All Ratings";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Rating" asp-action="AllRatings"
   sp-route-information="" class="btn btn-success">All Ratings</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var rating in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">Rating ID: @rating.RatingId</h5>
                    <h5 class="card-title mt-1">Rating Value: @rating.RatingValue</h5>
                    <h5 class="mb-0">Provide User ID: @rating.ProvideUserId</h5>
                    <h5 class="mb-0">Search User ID: @rating.SearchUserId</h5>
                </div>               
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no ratings yet!</p>
    }
 
</div>