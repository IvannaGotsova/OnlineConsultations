@model DetailsRatingModelView 

@{
    ViewBag.Title = $"Rating - {Model.RatingId}";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
   <div class="card col-4" style="width: 20rem; ">
       <div class="card-body">
            <input type="hidden" asp-for="@Model.RatingId" />
          <h5 class="card-title mt-1">Rating ID: @Model.RatingId</h5>
          <p class="mb-0">Rating Value: @Model.RatingValue</p>
          <p class="mb-0">Provide User ID: @Model.ProvideUserId</p>
          <p class="mb-0">Search User ID: @Model.SearchUserId</p>
       </div>
    </div>
</div>

