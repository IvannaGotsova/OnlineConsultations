@model IEnumerable<AllReviewsModelView> 


@{
    ViewBag.Title = "All Reviews";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Review" asp-action="AllReviews"
   sp-route-information="" class="btn btn-success">All Reviews</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var review in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">Review ID: @review.ReviewId</h5>
                    <h5 class="card-title mt-1">Review Description: @review.ReviewDescription</h5>
                    <h5 class="mb-0">Review Date: @review.ReviewDate</h5>
                    <h5 class="mb-0">Provide User ID: @review.ProvideUserId</h5>
                    <h5 class="mb-0">Search User ID: @review.SearchUserId</h5>
                </div>               
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no reviews yet!</p>
    }
 
</div>