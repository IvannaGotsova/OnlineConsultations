@model IEnumerable<ApplicationUserModelView>


@{
    ViewBag.Title = "All Users";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="ApplicationUser" asp-action="AllApplicationUsers"
   sp-route-information="" class="btn btn-success">All Users</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var user in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">User Name: @user.UserName</h5>
                    <h5 class="mb-0">User ID: @user.Id</h5>
                    <p class="mb-0">User email: @user.Email</p>
                    <p class="mb-0">User First Name: @user.FirstName</p>
                    <p class="mb-0">User Last Name: @user.LastName</p>
                </div>               
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no menus yet!</p>
    }
 
</div>